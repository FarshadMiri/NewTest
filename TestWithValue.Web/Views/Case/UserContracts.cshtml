@using TestWithValue.Domain.ViewModels.Contract
@model IEnumerable<ContractViewModel>

<div class="container mt-5">
    <h2 class="text-center mb-4">لیست قراردادهای کاربر</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>عنوان قرارداد</th>
                    <th>نام کاربر</th>
                    <th>وضعیت</th>
                    <th>تاریخ قرارداد</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-muted">هیچ قراردادی یافت نشد.</td>
                    </tr>
                }
                else
                {
                    @foreach (var contract in Model)
                    {
                        <tr>
                            <td>@contract.ContractTitle</td>
                            <td>@contract.FullName</td>
                            <td>
                                @switch (contract.Status)
                                {
                                    case "PendingUserApproval":
                                        <span class="badge bg-warning text-dark">در انتظار تایید کاربر</span>
                                        ;
                                        break;
                                    case "Approved":
                                        <span class="badge bg-success">تایید شده</span>
                                        ;
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">رد شده</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-secondary">نامشخص</span>
                                        ;
                                        break;
                                }
                            </td>
                            <td>@contract.ContractDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



