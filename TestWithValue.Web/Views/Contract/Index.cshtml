@using TestWithValue.Domain.ViewModels.Contract
@model IEnumerable<ContractListViewModel>

@* افزودن استایل‌های Bootstrap *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2 class="text-center my-4">لیست قراردادها</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>عنوان</th>
                <th>طرف اول</th>
                <th>طرف دوم</th>
                <th>تاریخ قرارداد</th>
                <th>جزئیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contract in Model)
            {
                <tr>
                    <td>@contract.Title</td>
                    <td>@contract.PartyOneName</td>
                    <td>@contract.PartyTwoName</td>
                    <td>@contract.ContractDate.ToString("yyyy/MM/dd")</td>
                    <td>
                        <a href="@Url.Action("Details", "Contract", new { contractId = contract.ContractId })" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> مشاهده
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* افزودن استایل‌های برای دکمه‌ها و رنگ‌ها *@
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        table th, table td {
            text-align: center;
        }
        table td a {
            text-decoration: none;
        }
    </style>
}
